# ===== Agent Identity =====
AGENT_NAME="SydTek Scholars Agent"
AGENT_VOICE="calm, scripture-rooted, parent-friendly"
POST_STYLE="short, clear, non-argumentative, no copyrighted Bible text; references only"

# ===== LLM (optional but recommended) =====
# If you want the agent to generate posts with an LLM:
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

# ===== Dispatch toggles =====
POST_TO_X=false
POST_TO_LINKEDIN=false
POST_TO_TELEGRAM=false
POST_TO_DISCORD=false

# ===== X/Twitter (twitter-api-v2) =====
X_APP_KEY=""
X_APP_SECRET=""
X_ACCESS_TOKEN=""
X_ACCESS_SECRET=""

# ===== LinkedIn =====
# You need an OAuth Access Token with permissions to post.
# Easiest: paste a valid access token here.
LINKEDIN_ACCESS_TOKEN=""
# Post as a person (URN like: urn:li:person:XXXXXXXX)
LINKEDIN_AUTHOR_URN=""
# OR post as an organization (URN like: urn:li:organization:XXXXXXXX)
LINKEDIN_ORG_URN=""
LINKEDIN_POST_AS_ORG=false

# ===== Telegram =====
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# ===== Discord Webhook (simplest) =====
DISCORD_WEBHOOK_URL=""

# ===== Scheduler =====
# Post every N minutes (simple interval scheduler)
POST_EVERY_MINUTES=240

# ===== Content source =====
# Optional: point to a local folder or a raw GitHub URL later.
CURRICULUM_SOURCE_MODE="embedded"  # embedded | local
CURRICULUM_LOCAL_PATH="./content"

# ===== Swarm (GCB Agent) =====
SWARM_GCB_ENABLED=false
SWARM_GCB_ENDPOINT="http://localhost:3333/handoff"
SWARM_GCB_API_KEY=""
SWARM_ALLOW_FALLBACK=true